@model IEnumerable<BoostHolding.Entities.Data.Employee>
@{
    ViewData["Title"] = "Manager Summary";
}
<h2 class="mb-3" style="color:tomato">HOME</h2>
<table class="table d-xxl-table-row table-hover" border="3">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Department
            </th>
            <th>
                Name
            </th>
            <th>
                LastName
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a class="btn btn-primary"asp-controller="Manager" asp-action="Details" >Details</a>
                </td>
                <td>
                    <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>


