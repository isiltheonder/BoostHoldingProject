@model IEnumerable<BoostHolding.Entities.Data.Employee>
@using BoostHolding.Entities.Data

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />

@{
    ViewData["Title"] = "Listing Employees";
}
<h2 class="mb-5" style="color:tomato">EMPLOYEE LIST</h2>

<div>
    @using (Html.BeginForm("Index", "Employee"))
    {
        <div class="row mb-2">
            <div class="col">

                <input type="text" class="form-control" placeholder="Search For An Employee" name="find" />
            </div>
            <div class="col">

                <input type="submit" class="btn btn-outline-secondary " value="Find Employee" />
            </div>
        </div>
    }
    <br />
    <table class="table table-hover text-center " border="3">
        <thead >
            <tr>
                <th>
                    Photo
                </th>
                <th>
                    Title
                </th>
                <th>
                    Department
                </th>
                <th>
                    Name
                </th>
                <th>
                    LastName
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img width="50" height="50"  src="~/img/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="employee" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>






