@using BoostHolding.Web.Services
@inject UserSignedIn user
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boost Holding</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />


    <link href="~/admin/css/admincss/admincss.css" rel="stylesheet" />




</head>

<body>
    <div id="overlay" class="overlay"></div>
    <div class="container">
        @*<partial name="_LoginPartial" />*@

        <div id="sidebar" class="sidebar ">
            <a href="#" id="btnCloseSidebar" class="close-sidebar"><i class="fa-fw fa-solid fa-xmark"></i></a>
            @{
                if (!user.PhotoCont())
                {
                    if (user.IsUserMale())
                    {
                        <img class="profile-photo"
                             src="~/img/male.jpg"
                             width="120"
                             height="120"
                             alt="Profile" />
                    }
                    else
                    {
                        <img class="profile-photo"
                             src="~/img/female.jpg"
                             width="120"
                             height="120"
                             alt="Profile" />
                    }
                }
                else
                {
                    <img class="profile-photo"
                         src="~/img/@user.GetUserPhoto()"
                         width="120"
                         height="120"
                         alt="Profile" />
                }
            }

            <h3 class="sidebar-title">@user.GetFullName()</h3>
            <div class="sidebar-menu">
                <a asp-area="Admin" asp-controller="Manager" asp-action="Index" class="active"><i class="fa-fw fa-brands fa-windows"></i>Home</a>



                @*Profile*@
                <a class="collapsed" href="#collapseTwo" data-toggle="collapse" data-target="#collapseTwo">
                    <i class="fa-fw fa-solid fa-user "></i>Profile
                </a>
                <div id="collapseTwo" class="collapse" data-parent="#sidebar">
                    <a class="sub-item" asp-area="Admin" asp-controller="Manager" asp-action="Details"><i class="bg-light fa-fw fa-solid fa-circle-info"></i>Details</a>
                    <a class="sub-item" asp-area="Admin" asp-controller="Manager" asp-action="Update"><i class="fa-fw fa-solid fa-pen-to-square"></i>Update</a>
                </div>



                @*Employee Transactions*@
                <a class="collapsed  " href="#collapseTwoo" data-toggle="collapse" data-target="#collapseTwoo">
                    <i class="font- fa-fw fa-solid fa-gear"></i>Employee Transactions
                </a>
                <div id="collapseTwoo" class="collapse" data-parent="#sidebar">
                    <a class="sub-item" asp-area="Admin" asp-controller="Employee" asp-action="Index"><i class="fa-fw fa-solid fa-list"></i>Employee List</a>
                    <a class="sub-item" asp-area="Admin" asp-controller="Employee" asp-action="Create"><i class="fa-fw fa-solid fa-user-plus"></i>Add Employee</a>
                </div>


                @*Employee Permissions*@
                <a class="collapsed  " href="#collapseTwo" data-toggle="collapse" data-target="#collapseTwooo">
                    <i class="font fa-fw fa-solid fa-users "></i>Employee Requests
                </a>
                <div id="collapseTwooo" class="collapse" data-parent="#sidebar">
                    <a class="sub-item" asp-area="Admin" asp-controller="Manager" asp-action="PermissionList"><i class="fa-fw fa-solid fa-clock"></i>Permission List</a>

                    <a class="sub-item" asp-area="Admin" asp-controller="Manager" asp-action="DemandList"><i class="fa-fw fa-solid fa-money-bill"></i>Expenditure List</a>

                    <a class="sub-item" asp-area="Admin" asp-controller="Manager" asp-action="AdvancePaymentList"><i class="fa-fw fa-solid fa-pen-nib"></i>Advance List</a>
                </div>




                <a class="logout-button btn btn-danger btn-block" asp-area="Admin" asp-controller="Login" asp-action="index">Log Out</a>

            </div>

        </div>
        <div class="nav-top">
            <a id="btnOpenSidebar" class="sidebar-open-button" href="#"><i class="fa-solid fa-fw fa-bars"></i></a>
            @{
                if (!user.PhotoCont())
                {
                    if (user.IsUserMale())
                    {
                        <img class="profile-photo"
                             src="~/img/male.jpg"
                             width="65"
                             height="65"
                             alt="Profile" />
                    }
                    else
                    {
                        <img class="profile-photo"
                             src="~/img/female.jpg"
                             width="65"
                             height="65"
                             alt="Profile" />
                    }
                }
                else
                {
                    <img class="nav-top-profile-photo"
                         src="~/img/@user.GetUserPhoto()"
                         width="65"
                         height="65"
                         alt="Profile" />
                }
            }
        </div>
        <div class="content">
            <div class="row">
                <div class="col-12">
                    <h1 class="content-heading text-center mb-5 ">BOOST HOLDING</h1>
                </div>

            </div>

            <div class="main-area">

                @RenderBody()



            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <!-- Copyright -->
        <div>
            <p>&copy; BoostHolding. All rights reserved.</p>
        </div>
    </div>

</body>
</html>


<script src="~/admin/js/admin.js"></script>
<script src="~/admin/vendor/jquery/jquery.min.js"></script>
<script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


@await RenderSectionAsync("Scripts", required: false)

