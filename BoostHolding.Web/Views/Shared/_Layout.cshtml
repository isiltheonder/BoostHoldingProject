<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MY PORTFOLIO</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="css/style.css" />
</head>

<body>

    <div id="overlay" class="overlay"></div>
    <div class="container">
    @*<partial name="_LoginPartial" />*@
        <div id="sidebar" class="sidebar">
            <a href="#" id="btnCloseSidebar" class="close-sidebar"><i class="fa-fw fa-solid fa-xmark"></i></a>
            <img class="profile-photo"
                 src="https://picsum.photos/id/1005/120/120"
                 width="120"
                 height="120"
                 alt="Profile" />
            <h3 class="sidebar-title">Manager Page</h3>
            <div class="sidebar-menu">
                <a asp-area="Admin" asp-controller="Manager" asp-action="Index" class="active"><i class="fa-fw fa-brands fa-windows"></i>Home</a>
                <a asp-area="Admin" asp-controller="Manager" asp-action="Details"><i class="fa-fw fa-solid fa-user"></i>Profile</a>
                <a asp-area="Admin" asp-controller="Manager" asp-action="Update"><i class="fa-fw fa-solid fa-pen-to-square"></i>Update</a>
                <a asp-area="Admin" asp-controller="Employee" asp-action="Index"><i class="fa-fw fa-solid fa-list"></i>Employee List</a>
                <a asp-area="Admin" asp-controller="Employee" asp-action="Create"><i class="fa-fw fa-solid fa-user-plus"></i>Add Employee</a>
              
            </div>

        </div>
        <div class="nav-top">
            <a id="btnOpenSidebar" class="sidebar-open-button" href="#"><i class="fa-solid fa-fw fa-bars"></i></a>
            <img class="nav-top-profile-photo" src="https://picsum.photos/id/1005/120/120" alt="Portfolio" width="65" height="65">
        </div>
        <div class="content">
            <h1 class="content-heading">Boost Holding</h1>

            <div class="main-area">

                @RenderBody()



            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        <!-- Copyright -->
        <div>
            <p>&copy; BoostHolding. All rights reserved.</p>
        </div>
    </div>

    <script src="~/js/style.js"></script>
</body>
</html>

@await RenderSectionAsync("Scripts", required: false)

